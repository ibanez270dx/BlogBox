<h1>New Blog Post</h1>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :author_photo_url, 'Author Photo URL' %>
    <%= f.text_field :author_photo_url, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control input-lg' %>
  </div>
  <div class="form-group">
    <%= f.label :abstract %>
    <%= f.text_area :abstract, class: 'form-control input-lg' %>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
<% end %>
